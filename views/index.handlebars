<h1>Eat Da Burger</h1>
<h2>READY TO DEVOUR!</h2>
<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">EAT DIS BISH!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>DEVOURED BURGERS!</h2>

<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">UN-EAT THE BURGER!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>What Kind of Burger?</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="input" id="burger_name" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button type="submit">Submit your burger!</button>
</form>